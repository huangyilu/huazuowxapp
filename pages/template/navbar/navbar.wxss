/* templates/navbar/navbar.wxss */

.navbar-view {
    width: 100%;
    height: 64px;
    position: fixed;
    top: 0;
    z-index: 999999999;
    background-color: white;
}
.navbar-view .title {
    margin-top: 20px;
    width: 100%;
    height: 44px;
    line-height: 44px;
    padding: 10rpx 0; 
    text-align: center;
}
.navbar-view .search-icon {
    width: 44rpx;
    height: 44rpx;
    margin-left: 60rpx;
    margin-top: 5px;
    position: absolute;
    left: 0;
}
.navbar-view .goback-icon {
    width: 44rpx;
    height: 44rpx;
    position: absolute;
    left: 30rpx;
    margin-top: 11px;
}
.navbar-view .center-icon {
    width: 134rpx;
    height: 64rpx;
    margin: auto;
    display: block;
}
.title-view {
    background-color: white;
}
.title-view .title{
    padding: 0;
    font-size: 36rpx;
    font-weight: 500;
}

/* iPhone X */
.addNavHeight {
    height: 108px;
}
.addTitleHeight {
    margin-top: 44px;
}