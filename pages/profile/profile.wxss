page {
    height: 100%;
    position: relative;
}

view, text {
    color: #333;
}

.profile {
    height: 280rpx;
    background: url('https://ws1.sinaimg.cn/large/005T083dgy1fkc3flo5ibj30ku07sdj1.jpg');
    padding-top: 70rpx;
    box-sizing: border-box;
    background-size: cover;
}

.profile image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 100%;
    border: 2px solid white;
    margin-left: 40rpx;
    margin-right: 20rpx;
    vertical-align: middle;
}
.profile .btn-login{
    width:160rpx;
    height: 50rpx;
    border: 4rpx solid white;
    background: rgba(255,255,255,0.2);
    color: white;
    text-align: center;
    font-size: 28rpx;
    line-height: 45rpx;
    display:inline-block;
    float:right;
    margin-right:50rpx;
    margin-top:-85rpx;
}
.profile .info {
    display: inline-block;
    width: calc(100% - 200rpx);
    vertical-align: middle;
    color: white;
    font-size: 34rpx;
    padding-left: 10rpx;
}

.profile .info view {
    font-size: 26rpx;
    padding-top: 30rpx;
    color: white;
}

.item {
    position: relative;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 34rpx;
    padding: 0 20rpx;
    background: white;
}

.item-note {
    font-size: 26rpx;
    color: #A9A9A9;
}

.order-type {
    background: white;
    padding: 0 20rpx;
}

.type-item {
    width: 33.3%;
    display: inline-block;
    text-align: center;
    border-top: 1px solid #F5F5F5;
    border-bottom: 1px solid #F5F5F5;
    padding-top: 40rpx;
    padding-bottom: 20rpx;
    position: relative;
}

.type-item view {
    font-size: 26rpx;
    color: #666;
    line-height: 200%;
    margin-top: 15rpx;
    margin-top: 15rpx;
}

.type-item image {
    width: 50rpx;
    height: 50rpx;
}

.type-item text {
    display: inline-block;
    width: 35rpx;
    height: 35rpx;
    color: #8597FD;
    border-radius: 100%;
    border: 2px solid #8597FD;
    font-size: 26rpx;
    line-height: 35rpx;
    text-align: center;
    position: absolute;
    top: 13%;
    right: 30%;
}

.latest-message {
    background: white;

}
.latest-message text{
    color:#E7E7E7;
    position: absolute;
    right: -10rpx;
    top:20rpx;
    font-size: 30rpx;
}

.latest-message .left, .latest-message .right {
    display: inline-block;
    vertical-align: middle;
    padding: 20rpx;
    color: #999999;
    line-height: 180%;
}

.latest-message .left {
    font-size: 19rpx;
    border-right: 4rpx solid #E7E7E7;
    padding: 20rpx 5rpx;
    margin: 15rpx;
    padding-right: 25rpx;
    margin-right: 10rpx;
        position: relative;
}

.latest-message .left view {
    color: #999999;
}

.latest-message image {
    width: 72rpx;
    height: 72rpx;
    vertical-align: middle;
    margin-left: 20rpx;
    margin-right: 4rpx;
}

.latest-message .right {
    color: #8597FD;
    font-size: 25rpx;
}

.latest-message .right view {
    font-size: 27rpx;
    color: #999;
    line-height: 180%;
}
.copoun-nav{
    background: white;
    margin-top: 20rpx;
    padding: 25rpx;
    font-size: 28rpx;
    color: #333;
}
.copoun-nav .coupon{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    margin-right: 20rpx;
}
.copoun-nav text{
    position: relative;
    top:2rpx;
    color: #333;
}
.copoun-nav .right{
    width: 22rpx;
    height: 22rpx;
    float: right;
    margin-top: 12rpx;
}
.status{
    color: #8597FD !important;
}
.circle{
    background: white;
}
