page {
    height: 100%;
    position: relative;
    background: white;
}

view, text {
    color: #333;
}

.container {
    padding-top: 64px;
}

.container-fix-iphonex {
    padding-top: 108px;
}

.star {
    background: white;
    height: 220rpx;
    padding-top: 50rpx;
    text-align: center;
}

.star .img {
    display: inline-block;
}

.star .des {
    font-size: 34rpx;
    color: #FF5000;
    margin-top: 40rpx;
}

.star image {
    width: 80rpx;
    height: 80rpx;
    margin: 0 20rpx;
}

.content {
    background: white;
    border-top: 2rpx solid #e8e8e8;
    /*margin-top: 20rpx;*/
}

.content textarea {
    width: 100%;
    height: 300rpx;
    padding: 25rpx;
    font-size: 32rpx;
    line-height: 180%;
}
.bg-default{
    height: 20rpx;
}
.bottom {
    background: white;
    /*text-align: right;*/
    color: #BFBFBF;
    font-size: 32rpx;
    padding: 30rpx;
    padding-top: 60rpx;
}

.bottom .pic {
    width: 116rpx;
    height: 116rpx;
    float: left;
    margin-top: -60rpx;
}

.bottom .checked {
    width: 46rpx;
    height: 46rpx;
    vertical-align: middle;
    margin-right: 10rpx;
    margin-top: -4rpx;
}
.upload {
    /*padding-top: 20rpx;*/
    background: white;
    box-sizing: content-box;
    margin: 0 10px;
}
.upload .img-33{
    display: inline-block;
    box-sizing: border-box;
    position: relative;
}
.upload image{
    width:100%;
    height: 100%;
}
.bottom .right{
    float: right;
    color: #bfbfbf;
}

.img-33 icon{
    position: absolute;
    right: 0;
    top:0;
}
