/* pages/order/order.wxss */


/* tab部分样式 */

.order-category {
  background:#fff;
  height: 40px;
  font-size:26rpx;
  color:#666;
  position: fixed;
  top: 64px;
  width: 100%;
}
.order-category-fix-iphonex {
    top: 108px;
}

.order-category .item {
  display: inline-block;
  width:20%;
  text-align: center;
}

.order-category .item.active {
  color:#8597fd;
}

.order-category .item .text {
  display: inline-block;
  height:75rpx;
  line-height:75rpx;
}
.order-category .item.active .text {
  border-bottom:6rpx solid #8597fd;
}


/* 列表部分卡片样式 */
.order-list{
    height: calc(100% - 230rpx);
    margin-top: 104px;
    position: fixed;
    bottom: 0;
    width: 100%;
}
.order-list-fix-iphonex {
    height: calc(100% - 300rpx);
    margin-top: 144px;
}
.order-list .item {
  background:#fff;
  padding:40rpx 20rpx 34rpx 20rpx;
  padding-top:0;
  margin-top:20rpx;
}

.order-list .half {
  display: inline-block;
  height:106rpx;
  line-height: 106rpx;
  width:50%;
  color:#999;
  font-size:28rpx;
  border-bottom:1rpx solid #f5f5f5;
}

.order-list .half.left {
  text-align:left;
}

.order-list .half.right {
  text-align:right;
}

.order-list .half.left .status {
  color:#333;

}

.order-list .body {
  padding-top:40rpx;
}

.order-list .body .img {
  width:184rpx;
  height:184rpx;
}

.order-list .body .info{
  display: inline-block;
  width:456rpx;
  margin-left:40rpx;
  font-size:28rpx;
  vertical-align: top;
  color:#333;
}

.order-list .body .attach {
  font-size:26rpx;
  color:#999;
  margin-top:19rpx;
}

.order-list .body .price {
  color:#8597fd;
  font-size:34rpx;
  margin-top:25rpx;
}

.btn {
  display: inline-block;
  vertical-align: middle;
  height:50rpx;
  width:160rpx;
  font-size:28rpx;
  line-height: 50rpx;
  padding-left:25rpx;
  padding-right:25rpx;
}
.btn-nomal {
  background-color:#8597fd;
  color:#fff;
}

.btn-nomal:active {
  background-color:#687ffd;
}

.btn-outline {
  background-color:transparent;
  color:#8597fd;
  border:1rpx solid #8597fd;
}

.btn-outline:active {
  color:#687ffd;
  border-color:#687ffd;
}
.body image{
    border: 2rpx solid #e8e8e8;
}
.btn-pay{
    color: #55B737 !important;
    border-color: #55B737 !important;
}
