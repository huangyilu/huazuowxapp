page {
    height: 100%;
    position: relative;
}

view, text {
    color: #333;
    /*background: white;*/
}

.no-coupon {
    margin: 20rpx;
    font-size: 26rpx;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 20rpx;
    border: 1px solid #e8e8e8;
}

.no-coupon image {
    width: 44rpx;
    height: 44rpx;
    margin-top: 28rpx;
    float: right;
}

.tit {
    background: none;
    font-size: 26rpx;
    color: #666;
    padding-left: 20rpx;
    padding-top: 20rpx;
    padding-right: 20rpx;
}

.tit text {
    color: #FF5000;
    background: none;
}

.coupon-item {
    height: 190rpx;
    margin: 20rpx;
    position: relative;
    padding: 40rpx 0;
    box-sizing: border-box;
    border-radius: 5rpx;
    border: 1px solid #e8e8e8;
    background: white;
}

.coupon-item .left {
    width: 30%;
    display: inline-block;
    font-size: 28rpx;
    color: #FF3700;
    text-align: center;
    vertical-align: middle;
}

.coupon-item .left text {
    font-size: 40rpx;
    color: #FF3700;
}

.coupon-item .left view {
    font-size: 26rpx;
    color: #999;
}

.coupon-item .right {
    width: 70%;
    display: inline-block;
    font-size: 28rpx;
    vertical-align: middle;
}

.coupon-item .number {
    font-weight: bold;
}

.coupon-item .date {
    font-size: 26rpx;
    line-height: 180%;
}

.coupon-item .date-left {
    color: #FF3700;
    font-size: 26rpx;
}

.coupon-item image {
    width: 44rpx;
    height: 44rpx;
    position: absolute;
    right: 20rpx;
    top: 80rpx;
}

.unuseable text, .unuseable view {
    color: #CCCCCC !important;
}

.unuseable image {
    display: none;
}

.unuseable {
    border-bottom: none;
}

.coupon-item-con {
    background: none;
}

.reason view {
    line-height: 200%;
    background: none;
}

.reason {
    height: 102rpx;
    font-size: 22rpx;
    color: #FF3700;
    margin-top: -22rpx;
    z-index: 9999;
    margin-left: 20rpx;
    margin-right: 20rpx;
    background: #FDFDFD;
    padding-left: 20rpx;
    border-bottom: 1px solid #e8e8e8;
    border-left: 1px solid #e8e8e8;
    border-right: 1px solid #e8e8e8;
    border-top: 1px solid #f5f5f5;
    padding-top: 20rpx;
    box-sizing: border-box;
    border-radius: 5rpx;
    position: relative;
}

.reason text {
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    background: #f5f5f5;
    /*background: red;*/
    position: absolute;
    border-radius: 100%;
    top: -15rpx;
    /*border: 1px solid #e2e2e2;*/
}

.reason .left {
    left: -15rpx;
}

.reason .right {
    right: -15rpx;
}

.ms {
    font-size: 50rpx !important;
    color: #FF3700 !important;
}

.ms text {
    color: #FF3700;
    font-size: 32rpx !important;
}
.search-con input {
    background: #EFEFF4;
}
.search-con .left view{
    margin-left: 30rpx;
}
.search-con{
    background:
    white;
}
